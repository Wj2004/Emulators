<Page x:Class="Emulators.PlayGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Emulators"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="PlayGame">
	<Border BorderThickness="0">
		<ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="0" Background="#2D2D30">
			<WrapPanel Name="buttonHolder" Background="#2D2D30" AllowDrop="True" Drop="WrapPanel_Drop" MouseRightButtonDown="Mouseclick"/>
		</ScrollViewer>
	</Border>
</Page>
