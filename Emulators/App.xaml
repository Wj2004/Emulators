<Application x:Class="Emulators.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Application.Resources>
		<Style x:Key="MyFocusVisual">
			<Setter Property="Control.Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Control}">
						<Grid Margin="3 2">
							<Rectangle Name="r1" StrokeThickness="1" Stroke="Black"/>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>


		<ResourceDictionary x:Key="ButtonTest">
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/DefaultButtonLayout.xaml"/>
				<ResourceDictionary Source="Resources/ScrollbarDir.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<Style TargetType="Button" BasedOn="{StaticResource ButtonTest}"/>
		</ResourceDictionary>
		
	</Application.Resources>
</Application>
