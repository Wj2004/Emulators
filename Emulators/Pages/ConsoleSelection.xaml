<Page x:Class="Emulators.Pages.ConsoleSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Emulators.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConsoleSelection">

	<Grid x:Name="LayoutRoot">
		<Grid x:Name="OverlayButton" Panel.ZIndex="100">
			<Grid.RowDefinitions>
				<RowDefinition Height="36*"/>
				<RowDefinition Height="10*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="127*"/>
				<ColumnDefinition Width="33*"/>
			</Grid.ColumnDefinitions>
			<Button Content="Back" Margin="0,0,10,10" Click="Button_Back" Grid.Row="1" BorderThickness="2" Grid.Column="1"/>
		</Grid>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="4*"/>
			</Grid.ColumnDefinitions>
			<TreeView>
				<TreeViewItem Header="Nintendo">
					<TreeViewItem Header="Wii"/>
					<TreeViewItem Header="Wii U"/>
					<TreeViewItem Header="Nintendo 64"/>
					<TreeViewItem Header="NES"/>
					<TreeViewItem Header="SNES"/>
				</TreeViewItem>
			</TreeView>
		</Grid>
	</Grid>
</Page>
